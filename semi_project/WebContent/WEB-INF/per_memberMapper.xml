<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="per_member">
	<insert id="add" parameterType="ex1.Ex1">
		insert into members values(#{id},#{pwd},#{email},#{phone},sysdate)
	</insert>
	<update id="modify" parameterType="ex1.Ex1">
		update members set pwd=#{pwd},email=#{email},phone=#{phone} where id=#{id}
	</update>
	<delete id="remove" parameterType="java.lang.String">
		delete from members where id=#{id}
	</delete>
	<select id="getlist" resultType="ex1.Ex1">
		select * from members
	</select>
	<select id="find" parameterType="String" resultType="ex1.Ex1">
		select * from members where id=#{id}
	</select>
	<select id="getInfo" parameterType="String" resultType="hashmap">
		select * from members where id=#{id}
	</select>
</mapper>
