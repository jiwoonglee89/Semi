<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Zipcode">
	<insert id="add" parameterType="DB.ZipcodeBean">
		insert into zipcode values(#{zipcode}, #{area1}, #{area2}, #{area3}, #{area4})
	</insert>
	<update id="modify" parameterType="DB.ZipcodeBean">
		update zipcode set zipcode=#{zipcode}, area1=#{area1}, area2=#{area2}, area3=#{area3}, area4=#{area4}
		
	</update>
	
	<select id="list" resultType="DB.ZipcodeBean">
		select * from zipcode
	</select>
	<select id="find" parameterType="String" resultType="DB.ZipcodeBean">
		select * from zipcode where zipcode=#{zipcode}
	</select>
	<select id="getInfo" parameterType="String" resultType="hashmap">
		select * from zipcode where zipcode=#{zipcode}
	</select>
	
</mapper>
